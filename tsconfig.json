{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/alex_frontend/src/*"],
      "*": ["node_modules/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/alex_frontend/src/types/*.d.ts"
  ],
  "exclude": [
    "node_modules/azle/src/lib/experimental/fetch/response.ts",
    "node_modules/azle/**/*.ts",
    "node_modules/@dfinity/agent/lib/cjs/auth.js",
    "src/alex_wallet/**/*.ts"
  ],
}
